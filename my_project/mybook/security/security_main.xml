<?xml version="1.0" encoding="UTF-8" ?>
<!--Không được đặt tên trùng id trong model có sẵn-->
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="category_security_id">
            <field name="name">Security Main</field>
            <field name="description">Security comment</field>
            <field name="sequence">20</field>
        </record>
        <record id="group_security_id" model="res.groups">
            <field name="name">admin</field>
            <field name="comment">Student comment</field>
            <field name="category_id" ref="category_security_id"/>
        </record>

        <record id="group_security__id_" model="res.groups">
            <field name="name">admin2</field>
            <field name="comment">Admin 2 comment</field>
            <field name="category_id" ref="category_security_id"/>
        </record>

        <record id="rule_student_id" model="ir.rule"> <!--            # sử dụng module có sẵn trong odoo-->
            <field name="name">student</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="groups" eval="[(4, ref('school.group_student_id'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="domain_force">[('employee_id.user_id','=', user.id)]</field>
        </record>

        <record id="rule_teacher_id" model="ir.rule"> <!--            # sử dụng module có sẵn trong odoo-->
            <field name="name">teacher</field>
            <field name="model_id" ref="model_student_student"/>
            <field name="groups" eval="[(4, ref('school.group_school_id'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="domain_force">[]</field>
        </record>

    </data>
</odoo>