<?xml version="1.0" encoding="UTF-8" ?>
<!--Không được đặt tên trùng id trong model có sẵn-->
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="category_security_id">
            <field name="name">Security Group</field>
            <field name="description">Security comment</field>
            <field name="sequence">20</field>
        </record>
        <record id="group_user" model="res.groups">
            <field name="name">book</field>
            <field name="comment">Book Comment</field>
            <field name="category_id" ref="category_security_id"/>
        </record>

        <record id="group_security__id_" model="res.groups">
            <field name="name">admin</field>
            <field name="comment">Admin comment</field>
            <field name="category_id" ref="category_security_id"/>
        </record>

        <record id="group_user_book_borrow" model="res.groups"> <!--            # sử dụng module có sẵn trong odoo-->
            <field name="name">book</field>
            <field name="model_id" ref="model_book_borrow"/>
            <field name="groups" eval="[(4, ref('mybook.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="domain_force">[]</field>
        </record>

        <record id="rule_admin_id" model="ir.rule"> <!--            # sử dụng module có sẵn trong odoo-->
            <field name="name">admin</field>
            <field name="model_id" ref="model_book_borrow"/>
            <field name="groups" eval="[(4, ref('mybook.group_security__id_'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="domain_force">[]</field>
        </record>

    </data>
</odoo>