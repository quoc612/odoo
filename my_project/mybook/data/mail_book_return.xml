<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="mail_book_return" model="mail.template">
            <field name="name">Email xác nhận trả sách</field>
            <field name="email_from">${object.email |safe}</field>
            <field name="email_to">quoc.nguyenvan2000@gmail.com</field>
            <field name="subject">Xác nhận thông tin trả sách của ${object.name or 'n/a' }</field>
            <field name="model_id" ref="model_return_borrow"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
                <p>Dear ${object.name_of_leader}</p>
                <p>
                   Quyển sách ${object.name_of_book} đã trả thành công
                </p>
                 <br/>
                 ]]>
            </field>
        </record>
    </data>
</odoo>