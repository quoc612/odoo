<odoo>
   <data>
       <record id="mail_templates_tra" model="mail.template">
           <field name="name">Email Template</field>
           <field name="model_id" ref="library.model_tra_sach"/>
           <field name="email_from">${object.mail}</field>
           <field name="email_to" >phuoc.vuhong@vti.com.vn</field>
           <field name="subject">Thông tin trả sách của ${object.name.name or 'n/a' }</field>
           <field name="auto_delete" eval="True"/>
           <field name="body_html"><![CDATA[
                <p>Hi ${object.quanly},</p>
                <br/>
                <p>Tôi muốn trả quyển sách tên: ${object.sachtra.name}, ngày trả là:  ${object.ngaytra}, tổng số tiền phạt trả muộn là: ${object.tien}</p>
                Regards,
                <br/>
                 ]]>
           </field>
       </record>
   </data>
</odoo>