<odoo>
   <data>
       <record id="mail_template" model="mail.template">
           <field name="name">Email Template</field>
           <field name="model_id" ref="library.model_muon_sach"/>
           <field name="email_from">${object.mail}</field>
           <field name="email_to" >manager@gmail.com</field>
           <field name="subject">Ref ${object.name or 'n/a' }</field>
           <field name="auto_delete" eval="True"/>
           <field name="body_html"><![CDATA[
                <p>I want to borrow a book is ${(object.sachmuon.name)} on ${(object.ngaymuon)} </p>
                <br/>
                <p>i promise will return on time</p>
                Regards,
                <br/>
                 ]]>
           </field>
       </record>
   </data>
</odoo>