<odoo>
   <data>
       <record id="mail_template_manager" model="mail.template">
           <field name="name">Email Template</field>
           <field name="model_id" ref="library.model_muon_sach"/>
           <field name="email_from">manager@gmail.com</field>
           <field name="email_to" >${object.mail}</field>
           <field name="subject">Ref ${object.name or 'n/a' }</field>
           <field name="auto_delete" eval="True"/>
           <field name="body_html"><![CDATA[
                <p>I approved for you borrow a book is ${(object.sachmuon.name)} </p>
                <br/>
                <p>Done</p>
                Regards,
                <br/>
                 ]]>
           </field>
       </record>
   </data>
</odoo>