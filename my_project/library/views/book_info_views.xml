<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="book_info_form_view" model="ir.ui.view">
            <field name="name">Book Info Form</field>
            <field name="model">book.info</field>
            <field name="arch" type="xml">
                <form string="Book Infomation">
                    <sheet>
                        <field name="image" widget="image" class="oe_left oe_avatar" />
                        <div class="oe_title">
                            <h3>
                                <field name="name" placeholder="e.g. ACB book"/>
                            </h3>
                        </div>
                        <group>
                            <field name="thoihan"/>
                            <field name="heso"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_pet_tree_view" model="ir.ui.view">
            <field name="name">book.info.tree.view</field>
            <field name="model">book.info</field>
            <field name="arch" type="xml">
                <tree string="Thong Tin Sach" >
                    <field name="name"/>
                    <field name="thoihan"/>
                    <field name="heso"/>
                </tree>
            </field>
        </record>

        <record id="action_book_info" model="ir.actions.act_window">
            <field name="name">Danh Sach</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">book.info</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create The First
                </p>
            </field>
        </record>
        <menuitem id="library_menu"
                  name="LIBRARY"/>
        <menuitem id="menu_book"
                  parent="library_menu"
                  name="Thong Tin Sach"
                  action="action_book_info"
                  groups="base.group_user"/>

        <menuitem id="menu_muon_sach"
                  parent="library_menu"
                  name="Muon Sach"
                  action="action_muon_sach"
                  groups="base.group_user"/>

        <menuitem id="menu_tra"
                  parent="library_menu"
                  name="Tra Sach"
                  action="action_tra_sach"
                  groups="base.group_user"/>
    </data>
</odoo>