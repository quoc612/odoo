<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tra_sach_form_view" model="ir.ui.view">
            <field name="name">tra.sach.form.view</field>
            <field name="model">tra.sach</field>
            <field name="arch" type="xml">
                <form>
                    <header>
<!--                        <button string="Set to concept" type="object" name="concept_progressbar" attrs="{'invisible': [('state', '=', 'concept')]}"/>-->
                        <button string="Request" type="object" name="started_progressbar" class="oe_highlight" attrs="{'invisible': [('state','=','request')]}"/>
                        <button string="Approving" type="object" name="progress_progressbar" attrs="{'invisible': [('state','=','approving')]}"/>
                        <button string="Done" type="object" name="dones_progressbar"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="quanly"/>
                            <field name="ngaytra"/>
                            <field name="hantra"/>
                            <field name="total_days"/>
                            <field name="sachtra"/>
                            <field name="heso"/>
                            <field name="tien"/>
                            <field name="mail"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tra_sach_tree_view" model="ir.ui.view">
            <field name="name">tra.sach.tree.view</field>
            <field name="model">tra.sach</field>
            <field name="arch" type="xml">
                <tree string="Muon Sach" >
                    <field name="name"/>
                    <field name="quanly"/>
                    <field name="ngaytra"/>
                    <field name="hantra"/>
                    <field name="total_days"/>
                    <field name="sachtra"/>
                    <field name="heso"/>
                    <field name="tien"/>
                    <field name="mail"/>
                </tree>
            </field>
        </record>

        <record id="action_tra_sach" model="ir.actions.act_window">
            <field name="name">Tra Sach</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tra.sach</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create The First
                </p>
            </field>
        </record>
    </data>
</odoo>