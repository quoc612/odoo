<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
       <record id="mail_action" model="ir.actions.act_window">
          <field name="name">Send Mail</field>
          <field name="res_model">muon.sach</field>
          <field name="type">ir.actions.act_window</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
      </record>
       <record id="view_test_email_form" model="ir.ui.view">
           <field name="name">Mail Form</field>
           <field name="model">muon.sach</field>
           <field name="arch" type="xml">
               <form>
                   <header>
                       <button name="progress_progressbar" string="Send by email" type="object"/>
                   </header>
                   <sheet>
                       <field name="name" readonly="1"/>
                       <div>
                           <group>
                                <field name="name"/>
                                <field name="quanly"/>
                                <field name="ngaymuon"/>
                                <field name="sachmuon"/>
                                <field name="mail"/>
                                <field name="hantra"/>
                           </group>
                       </div>
                   </sheet>
               </form>
           </field>
       </record>
</data>
</odoo>